<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.lists.SleepListActivity">

    <TextView
        android:id="@+id/titre_liste_sleeps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Historique des dodos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Date: "
        app:layout_constraintTop_toBottomOf="@id/titre_liste_sleeps"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Heure: "
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/titre_liste_sleeps"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        />
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="DurÃ©e: "
        app:layout_constraintTop_toBottomOf="@id/titre_liste_sleeps"
        app:layout_constraintLeft_toRightOf="@id/tv_time"/>

    <ListView
        android:id="@+id/lv_sleeplist"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre_liste_sleeps"
        app:layout_constraintTop_toTopOf="parent">
    </ListView>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lv_sleeplist"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_menu_add"
        android:onClick="OnClickAddSleep"
        />

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ib_add"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="170dp"
        android:src="@android:drawable/ic_menu_revert"
        android:onClick="OnClickBack"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
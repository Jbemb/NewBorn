<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.meal.AddModifyMealActivity"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="29dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_baby"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_baby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="baby"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/et_title_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TITRE"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_baby" />

    <TextView
        android:id="@+id/tv_date_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Date: "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_meal" />

    <EditText
        android:id="@+id/et_date_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/tv_date_add_meal"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_meal" />

    <ImageButton
        android:id="@+id/ib_calendar"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/calendar1"
        app:layout_constraintLeft_toRightOf="@id/et_date_add_meal"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_meal" />

    <TextView
        android:id="@+id/tv_time_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="Heure: "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_add_meal" />

    <EditText
        android:id="@+id/et_time_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="55dp"
        app:layout_constraintLeft_toRightOf="@id/tv_time_add_meal"
        app:layout_constraintTop_toBottomOf="@id/et_date_add_meal" />

    <ImageButton
        android:id="@+id/ib_clock"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/clock1"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toRightOf="@id/et_time_add_meal"
        app:layout_constraintTop_toBottomOf="@id/ib_calendar" />

    <TextView
        android:id="@+id/tv_quantity_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="QuantitÃ© (mL): "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_add_meal" />


    <EditText
        android:id="@+id/et_quantity_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="47dp"
        app:layout_constraintLeft_toRightOf="@id/tv_quantity_add_meal"
        app:layout_constraintTop_toBottomOf="@id/et_time_add_meal" />

    <TextView
        android:id="@+id/tv_breast_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Sein (allaitement): "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity_add_meal" />

    <RadioButton
        android:id="@+id/rb_right_breast_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="droit"
        app:layout_constraintLeft_toRightOf="@+id/tv_breast_add_meal"
        app:layout_constraintTop_toBottomOf="@+id/et_quantity_add_meal" />

    <RadioButton
        android:id="@+id/rb_left_breast_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:text="gauche"
        app:layout_constraintLeft_toRightOf="@+id/tv_breast_add_meal"
        app:layout_constraintTop_toBottomOf="@+id/rb_right_breast_meal" />

    <ImageButton
        android:id="@+id/btn_save_add_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="76dp"
        android:onClick="onClickSave"
        android:src="@drawable/save1"
        android:text="Sauvegarder"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_breast_add_meal" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SummaryDayActivity"
    android:paddingRight="50dp">

    <TextView
        android:id="@+id/titre_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bilan de la journée"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="XXXX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titre_summary" />

    <ImageView
        android:id="@+id/iv_meal_summary"
        android:layout_width="121dp"
        android:layout_height="105dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/bottle1"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_day" />

    <TextView
        android:id="@+id/tv_meal_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="XXXX"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/iv_meal_summary"
        app:layout_constraintTop_toTopOf="@id/btn_details_meal" />

    <ImageButton
        android:id="@+id/ib_calendar"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/calendar1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_day" />

    <Button
        android:id="@+id/btn_details_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="196dp"
        android:onClick="onClickDetailsMeal"
        android:text="Détails"
        app:layout_constraintLeft_toRightOf="@id/tv_meal_summary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_change_summary"
        android:layout_width="121dp"
        android:layout_height="105dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/diaper1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_meal_summary" />

    <TextView
        android:id="@+id/tv_change_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="XXXX"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/iv_change_summary"
        app:layout_constraintTop_toTopOf="@id/btn_details_change" />

    <Button
        android:id="@+id/btn_details_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="108dp"
        android:onClick="onClickDetailsChange"
        android:text="Détails"
        app:layout_constraintLeft_toRightOf="@id/tv_change_summary"
        app:layout_constraintTop_toBottomOf="@id/btn_details_meal" />

    <ImageView
        android:id="@+id/iv_sleep_summary"
        android:layout_width="121dp"
        android:layout_height="105dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/bed1"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_change_summary" />

    <TextView
        android:id="@+id/tv_sleep_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="XXXX"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/iv_sleep_summary"
        app:layout_constraintTop_toTopOf="@id/btn_details_sleep" />

    <Button
        android:id="@+id/btn_details_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="112dp"
        android:onClick="onClickDetailsSleep"
        android:text="Détails"
        app:layout_constraintLeft_toRightOf="@id/tv_sleep_summary"
        app:layout_constraintTop_toBottomOf="@+id/btn_details_change" />


</androidx.constraintlayout.widget.ConstraintLayout>
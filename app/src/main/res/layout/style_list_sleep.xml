<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.sleep.SleepListActivity"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tv_dateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="DATE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_timeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="HEURE"
        app:layout_constraintLeft_toRightOf="@id/tv_dateItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_durationItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="28dp"
        android:text="DUREE"
        app:layout_constraintLeft_toRightOf="@id/tv_timeItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_modify"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/tv_durationItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        android:background="@drawable/delete"
        app:layout_constraintLeft_toRightOf="@id/ib_modify"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
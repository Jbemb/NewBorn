<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.change.AddModifyChangeActivity"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="29dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_baby"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_baby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="baby"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/et_title_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TITRE"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_baby" />

    <TextView
        android:id="@+id/tv_date_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Date: "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_change" />

    <EditText
        android:id="@+id/et_date_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginTop="82dp"
        app:layout_constraintLeft_toRightOf="@id/tv_date_add_change"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_change" />

    <ImageButton
        android:id="@+id/ib_calendar"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginTop="68dp"
        android:layout_marginRight="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/calendar1"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintLeft_toRightOf="@id/et_date_add_change"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title_add_change" />

    <TextView
        android:id="@+id/tv_time_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Heure: "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_add_change" />

    <EditText
        android:id="@+id/et_time_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toRightOf="@id/tv_time_add_change"
        app:layout_constraintTop_toBottomOf="@id/et_date_add_change" />

    <ImageButton
        android:id="@+id/ib_clock"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/clock1"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintLeft_toRightOf="@id/et_time_add_change"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_date_add_change" />

    <TextView
        android:id="@+id/tv_selle_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Selle: "
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_add_change" />


    <CheckBox
        android:id="@+id/cb_selle_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="86dp"
        android:text="(oui)"
        app:layout_constraintLeft_toRightOf="@+id/tv_selle_add_change"
        app:layout_constraintTop_toBottomOf="@+id/et_time_add_change" />

    <ImageButton
        android:id="@+id/btn_save_add_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="onClickSave"
        android:src="@drawable/save1"
        android:text="Sauvegarder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selle_add_change" />


</androidx.constraintlayout.widget.ConstraintLayout>